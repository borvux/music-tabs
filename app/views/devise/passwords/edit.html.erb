<% page_title "Reset your password - Music Tab" %>

<h2 id="change-password-heading">Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: "form", "aria-labelledby": "change-password-heading" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password", class: "form-label" %><br />
    <% if @minimum_password_length %>
      <em id="password-length">(minimum <%= @minimum_password_length %> characters)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", "aria-describedby": "password-length" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm new password", class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
